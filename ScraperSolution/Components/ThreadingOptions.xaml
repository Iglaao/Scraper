<UserControl x:Class="Scraper.Components.ThreadingOptions"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Scraper.Components"
             mc:Ignorable="d" 
             Height="70" Width="400">
    <GroupBox
        Header="Threading options"
        BorderThickness="1" 
        BorderBrush="Black"
        >
        <Grid Margin="5">
            <StackPanel Grid.Row="1" Name="ThreadPanel">
                <TextBlock>How many threads per URL link?</TextBlock>
            </StackPanel>
        </Grid>
    </GroupBox>
</UserControl>
