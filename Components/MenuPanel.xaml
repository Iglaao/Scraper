<UserControl x:Class="Scraper.Components.MenuPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Scraper.Components"
             mc:Ignorable="d" 
             Height="130" Width="400">
    <GroupBox
        Header="Menu panel"
        BorderThickness="1"
        BorderBrush="Black">
        <Grid Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Button Grid.Column="0" Grid.Row="0" Click="Run">Start</Button>
            <Button Grid.Column="0" Grid.Row="1" Click="StopAndSave">Stop and Save</Button>
            <Button Grid.Column="1" Grid.Row="0" Click="Cancel">Cancel</Button>
            <Button Grid.Column="1" Grid.Row="1" Click="SaveResults">Save results</Button>
        </Grid>
    </GroupBox>
</UserControl>
